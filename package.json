{
  "name": "crypto-telegram-bot",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "start": "cd apps/app && pnpm run dev",
    "start:api": "cd apps/api && pnpm run start:dev",
    "start:api:prod": "cd apps/api && pnpm run start:prod",
    "clean": "pnpm run -r clean",
    "build": "pnpm run -r build",
    "test": "pnpm run -r test",
    "lint": "eslint --ext js,ts,tsx ."
  },
  "devDependencies": {
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-boundaries": "^2.10.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-use-effect-no-deps": "^1.1.2",
    "prettier": "2.6.2",
    "typescript": "~4.9.0"
  }
}
